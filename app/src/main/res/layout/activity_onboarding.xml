<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="ltr"
    tools:context=".presentations.ui.activities.onboarding.OnboardingActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/dotsLayout"
        android:layout_margin="@dimen/_12sdp"
        >

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/slide1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                app:srcCompat="@drawable/slide1"
                android:elevation="@dimen/_12sdp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/app_icon_iv"
                android:textColor="@color/black"
                android:text="@string/convert_any_website_to_app"
                android:textAlignment="center"
                android:fontFamily="@font/arimo_regular"
                android:textSize="@dimen/_18ssp"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/_16sdp"
                android:maxLines="1"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/app_icon_iv"
                android:textColor="@color/black_2"
                android:text="@string/transform_your_website_into_a_fully_functional_android_app_in_just_a_few_minutes_no_coding_required"
                android:textAlignment="center"
                android:fontFamily="@font/arimo_regular"
                android:textSize="@dimen/_12ssp"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/_8sdp"
                android:maxLines="3"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_16sdp"
                android:weightSum="2"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:gravity="end"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/slid1_chip"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/easy_url_input"
                            android:layout_centerInParent="true"
                            android:paddingVertical="@dimen/_10sdp"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:includeFontPadding="false"
                            android:fontFamily="@font/arimo_regular"
                            android:textSize="@dimen/_11ssp"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_6sdp"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/slid1_chip"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/quick_conversion"
                            android:layout_centerInParent="true"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            android:includeFontPadding="false"
                            android:fontFamily="@font/arimo_regular"
                            android:textSize="@dimen/_11ssp"
                            />
                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/slid1_chip"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/professional_results"
                    android:layout_centerInParent="true"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/arimo_regular"
                    android:textSize="@dimen/_11ssp"
                    />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/slide2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                app:srcCompat="@drawable/slide2"
                android:elevation="@dimen/_12sdp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/app_icon_iv"
                android:textColor="@color/black"
                android:text="@string/customize_your_app"
                android:textAlignment="center"
                android:fontFamily="@font/arimo_regular"
                android:textSize="@dimen/_18ssp"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/_16sdp"
                android:maxLines="1"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/app_icon_iv"
                android:textColor="@color/black_2"
                android:text="@string/personalize_your_app_with_custom_icons_splash_screens_colors_and_branding_to_match_your_style"
                android:textAlignment="center"
                android:fontFamily="@font/arimo_regular"
                android:textSize="@dimen/_12ssp"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/_8sdp"
                android:maxLines="3"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_16sdp"
                android:weightSum="2"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:gravity="end"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/slid2_chip"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/custom_branding"
                            android:layout_centerInParent="true"
                            android:paddingVertical="@dimen/_10sdp"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:includeFontPadding="false"
                            android:fontFamily="@font/arimo_regular"
                            android:textSize="@dimen/_11ssp"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_6sdp"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/slid2_chip"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/color_themes"
                            android:layout_centerInParent="true"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            android:includeFontPadding="false"
                            android:fontFamily="@font/arimo_regular"
                            android:textSize="@dimen/_11ssp"
                            />
                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/slid2_chip"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_icons_logos"
                    android:layout_centerInParent="true"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/arimo_regular"
                    android:textSize="@dimen/_11ssp"
                    />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/slide3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                app:srcCompat="@drawable/slide3"
                android:elevation="@dimen/_12sdp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/app_icon_iv"
                android:textColor="@color/black"
                android:text="@string/build_publish"
                android:textAlignment="center"
                android:fontFamily="@font/arimo_regular"
                android:textSize="@dimen/_18ssp"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/_16sdp"
                android:maxLines="1"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/app_icon_iv"
                android:textColor="@color/black_2"
                android:text="@string/generate_your_apk_instantly_and_get_help_publishing_to_google_play_store_your_app_ready_to_go"
                android:textAlignment="center"
                android:fontFamily="@font/arimo_regular"
                android:textSize="@dimen/_12ssp"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/_8sdp"
                android:maxLines="3"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_16sdp"
                android:weightSum="2"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:gravity="end"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/slid3_chip"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/instant_apk_generation"
                            android:layout_centerInParent="true"
                            android:paddingVertical="@dimen/_10sdp"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:includeFontPadding="false"
                            android:fontFamily="@font/arimo_regular"
                            android:textSize="@dimen/_11ssp"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_6sdp"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/slid3_chip"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/play_store_support"
                            android:layout_centerInParent="true"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            android:includeFontPadding="false"
                            android:fontFamily="@font/arimo_regular"
                            android:textSize="@dimen/_11ssp"
                            />
                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/slid3_chip"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ongoing_updates"
                    android:layout_centerInParent="true"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/arimo_regular"
                    android:textSize="@dimen/_11ssp"
                    />
            </RelativeLayout>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/dotsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonsCL"
        android:layout_marginBottom="@dimen/_12sdp"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dot_selected_board"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dot2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_4sdp"
            app:srcCompat="@drawable/dot_unselected_board" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dot3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dot_unselected_board"
            android:layout_marginHorizontal="@dimen/_4sdp"
            />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonsCL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/adParentLayout"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        >

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/skipBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/_47sdp"
            app:cardCornerRadius="@dimen/_14sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/nextBtn"
            android:layout_marginHorizontal="@dimen/_4sdp"
            app:cardBackgroundColor="@color/white"
            android:foreground="?attr/selectableItemBackground"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/skip"
                android:textColor="@color/black_1"
                android:fontFamily="@font/arimo_regular"
                android:textSize="@dimen/_14ssp"
                />


        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/nextBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/_47sdp"
            app:cardCornerRadius="@dimen/_14sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/skipBtn"
            android:layout_marginHorizontal="@dimen/_4sdp"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="0dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_btn_bg"
                android:foreground="?attr/selectableItemBackground"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/next"
                    android:textColor="@color/white"
                    android:fontFamily="@font/arimo_regular"
                    android:textSize="@dimen/_14ssp"
                    android:drawablePadding="@dimen/_8sdp"
                    app:drawableEndCompat="@drawable/ic_forward"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>




        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:visibility="gone"
            android:id="@+id/getStartedBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/_47sdp"
            app:cardCornerRadius="@dimen/_14sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="@dimen/_4sdp"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="0dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_btn_bg"
                android:foreground="?attr/selectableItemBackground"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/get_started"
                    android:textColor="@color/white"
                    android:fontFamily="@font/arimo_regular"
                    android:textSize="@dimen/_14ssp"
                    android:drawablePadding="@dimen/_16sdp"
                    app:drawableEndCompat="@drawable/ic_forward"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>




        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <RelativeLayout
        android:id="@+id/adParentLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/container"
        android:background="@color/white"
        >


        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/nativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <include
                android:id="@+id/shimmerContainer"
                layout="@layout/native_ad_medium_shimmer"
                android:visibility="visible" />

        </RelativeLayout>
        <FrameLayout
            android:id="@+id/ad_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />


    </RelativeLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>