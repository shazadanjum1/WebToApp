<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_20sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20sdp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/close_btn"
                android:layout_gravity="end"
                android:foreground="?attr/selectableItemBackground"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/emojiIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_rate_us"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="-10dp"
                />

            <TextView
                android:id="@+id/rateUsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emojiIv"
                android:text="@string/enjoying_our_app"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/rateUsMessageTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rateUsTv"
                android:text="@string/your_feedback_helps_us_improve_and_serve_you_better"
                android:textColor="@color/c4"
                android:textSize="@dimen/_13sdp"
                android:textAlignment="center"
                android:fontFamily="@font/arimo_regular"
                android:layout_marginTop="@dimen/_5sdp"
                />

            <LinearLayout
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rateUsMessageTv"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                >

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_filled"
                    android:layout_marginEnd="@dimen/_8sdp"
                    />

                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_filled"
                    android:layout_marginEnd="@dimen/_8sdp"
                    />

                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_filled"
                    android:layout_marginEnd="@dimen/_8sdp"
                    />

                <ImageView
                    android:id="@+id/star4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_filled"
                    android:layout_marginEnd="@dimen/_8sdp"
                    />

                <ImageView
                    android:id="@+id/star5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_unfilled"
                    />

            </LinearLayout>

            <TextView
                tools:visibility="visible"
                android:visibility="gone"
                android:id="@+id/msgTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rateUsTv"
                android:text="@string/awesome_were_so_glad_you_love_it"
                android:textColor="@color/blue"
                android:textSize="@dimen/_11sdp"
                android:textAlignment="center"
                android:fontFamily="@font/arimo_regular"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_12sdp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rateBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:text="@string/rate_us"
                android:background="@drawable/rate_btn_gradient"
                app:backgroundTint="@null"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                app:icon="@drawable/star_filled"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                app:iconPadding="@dimen/_8sdp"
                android:foreground="?attr/selectableItemBackground"
                />


            <TextView

                android:id="@+id/laterBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rateUsTv"
                android:text="@string/maybe_later"
                android:textColor="@color/blue"
                android:textSize="@dimen/_11sdp"
                android:padding="@dimen/_5sdp"
                android:textAlignment="center"
                android:fontFamily="@font/arimo_regular"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_8sdp"
                android:foreground="?attr/selectableItemBackground"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>