<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/parentView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginVertical="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_13sdp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parentViewCL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_btn_bg"
            android:foreground="?attr/selectableItemBackground"
            >


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/flagCard"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                app:strokeWidth="@dimen/_2sdp"
                app:strokeColor="@color/blue"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/_4sdp"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/flagIv"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:srcCompat="@drawable/flag_eng"
                    android:layout_gravity="center"
                    />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/languageTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/flagCard"
                app:layout_constraintEnd_toStartOf="@+id/selectorIv"
                app:layout_constraintTop_toTopOf="@+id/flagCard"
                app:layout_constraintBottom_toTopOf="@+id/cntryNameTv"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:text="English"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                android:fontFamily="@font/arimo_regular"
                />

            <TextView
                android:id="@+id/cntryNameTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/flagCard"
                app:layout_constraintEnd_toStartOf="@+id/selectorIv"
                app:layout_constraintTop_toBottomOf="@+id/languageTv"
                app:layout_constraintBottom_toBottomOf="@+id/flagCard"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:text="English"
                android:textAlignment="viewStart"
                android:textColor="@color/white_80"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/arimo_regular"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/selectorIv"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                app:srcCompat="@drawable/lang_selected"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="@dimen/_12sdp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>