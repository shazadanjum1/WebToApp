<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentations.ui.activities.Premium.SubscriptionAndLifeTimeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbarLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



<!--    app:layout_constraintTop_toBottomOf="@id/toolbarLL"-->


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/container"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_20sdp"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_220sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/pro_header"
                android:scaleType="fitXY"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/iv2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv1"
                android:layout_marginTop="-70dp"
                app:srcCompat="@drawable/transparent_bg"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:id="@+id/infoLL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv2"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="-12dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/infoTv2"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_web_to_app" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/web_to_app"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"
                        android:fontFamily="@font/arimo_regular"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:layout_marginStart="@dimen/_7sdp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/infoTv2"
                    android:layout_marginTop="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_priority_support" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/priority_support_available"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"
                        android:fontFamily="@font/arimo_regular"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:layout_marginStart="@dimen/_7sdp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/infoTv2"
                    android:layout_marginTop="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_free_updates_forever" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/free_updates_forever"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"
                        android:fontFamily="@font/arimo_regular"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:layout_marginStart="@dimen/_7sdp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/infoTv2"
                    android:layout_marginTop="@dimen/_11sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_always_ads_free" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/always_ads_free"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"
                        android:fontFamily="@font/arimo_regular"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:layout_marginStart="@dimen/_7sdp"
                        />

                </LinearLayout>

            </LinearLayout>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/proWeeklyBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_32sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/infoLL"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="@dimen/_16sdp"
                app:cardBackgroundColor="@color/blue"
                app:strokeColor="@color/chip_text_purple"
                android:layout_marginTop="@dimen/_22sdp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@+id/nexIV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingVertical="@dimen/_12sdp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arimo_regular"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:text="@string/start_free_trial"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16ssp" />

                    <TextView
                        android:id="@+id/weeklyPriceTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/arimo_regular"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/_11ssp"
                        android:textAlignment="center"
                        android:maxLines="1"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/proYearlyBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_65sdp"
                app:cardCornerRadius="@dimen/_32sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/proWeeklyBtn"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="@dimen/_16sdp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="@dimen/_22sdp"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@+id/nexIV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingVertical="@dimen/_10sdp"
                    android:layout_gravity="center_vertical"
                    >

                    <TextView
                        android:id="@+id/yearlyTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Yearly"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arimo_regular"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:maxLines="1"
                        android:includeFontPadding="false"
                        />

                    <TextView
                        android:id="@+id/yearlyPriceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/just_per_year"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arimo_regular"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintTop_toBottomOf="@+id/yearlyTv"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:maxLines="1"
                        android:includeFontPadding="false"
                        />

                    <TextView
                        android:id="@+id/perWeekTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="****"
                        android:textColor="@color/pro_c7"
                        android:textStyle="bold"
                        android:fontFamily="@font/arimo_regular"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:maxLines="1"
                        android:includeFontPadding="false"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/per_week"
                        android:textColor="@color/pro_c7"
                        android:textStyle="bold"
                        android:fontFamily="@font/arimo_regular"
                        android:textSize="@dimen/_9ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/yearlyTv"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:maxLines="1"
                        android:includeFontPadding="false"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/percentageTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_percentage_bg"
                android:layout_marginTop="-11dp"
                app:layout_constraintTop_toTopOf="@+id/proYearlyBtn"
                app:layout_constraintEnd_toEndOf="@+id/proYearlyBtn"
                android:layout_marginEnd="@dimen/_40sdp"
                android:text="@string/best_offer"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/arimo_regular"
                android:textSize="@dimen/_10ssp"
                android:paddingHorizontal="@dimen/_8sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:maxLines="1"
                android:includeFontPadding="false"
                />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/proLifeTimeBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_65sdp"
                app:cardCornerRadius="@dimen/_32sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/proYearlyBtn"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="@dimen/_16sdp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="@dimen/_12sdp"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@+id/nexIV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingVertical="@dimen/_10sdp"
                    >

                    <TextView
                        android:id="@+id/lifetimeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lifetime"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arimo_regular"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:maxLines="1"
                        android:includeFontPadding="false"
                        />


                    <TextView
                        android:id="@+id/lifetimePriceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="****"
                        android:textColor="@color/pro_c7"
                        android:textStyle="bold"
                        android:fontFamily="@font/arimo_regular"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:maxLines="1"
                        android:includeFontPadding="false"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/termsAndConditionTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms_of_use_privacy_policy_cancel_anytime"
                android:textColor="@color/pro_c7"
                android:textStyle="bold"
                android:fontFamily="@font/arimo_regular"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/proLifeTimeBtn"
                android:layout_marginTop="@dimen/_9sdp"
                android:includeFontPadding="false"
                android:padding="@dimen/_4sdp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cross_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarLL"
        android:layout_margin="@dimen/_12sdp"
        android:foreground="?attr/selectableItemBackground"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressBar"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_18sdp"
        android:indeterminateTint="@color/blue"
        />
</androidx.constraintlayout.widget.ConstraintLayout>