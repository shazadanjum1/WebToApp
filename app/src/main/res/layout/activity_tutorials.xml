<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@color/white"
    tools:context=".presentations.ui.activities.tutorials.TutorialsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbarLL"
        android:background="@drawable/toolbar_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarLL"
        app:layout_constraintBottom_toTopOf="@+id/container"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_20sdp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/createAppBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_14sdp"
                android:foreground="?attr/selectableItemBackground"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_120sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_create_app_btn"
                        />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/iv1"
                        app:layout_constraintBottom_toBottomOf="@+id/iv1"
                        android:layout_margin="@dimen/_8sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        app:cardBackgroundColor="@color/white_95"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/getting_started"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:fontFamily="@font/arimo_regular"
                            android:textSize="@dimen/_11ssp"
                            android:includeFontPadding="false"
                            />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/arimo_regular"
                        android:includeFontPadding="false"
                        android:text="@string/how_to_create_an_app"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black_3"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv1"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:fontFamily="@font/arimo_regular"
                        android:includeFontPadding="false"
                        android:text="@string/step_by_step_guide_to_create_your_first_web_to_app_conversion"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_1"
                        android:textSize="@dimen/_11ssp"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv1"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/uploadAppBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_80sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_14sdp"
                android:foreground="?attr/selectableItemBackground"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_120sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_upload_app_btn"
                        />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/iv2"
                        app:layout_constraintBottom_toBottomOf="@+id/iv2"
                        android:layout_margin="@dimen/_8sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        app:cardBackgroundColor="@color/white_95"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/publishing"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:fontFamily="@font/arimo_regular"
                            android:textSize="@dimen/_11ssp"
                            android:includeFontPadding="false"
                            />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/arimo_regular"
                        android:includeFontPadding="false"
                        android:text="@string/how_to_upload_to_play_store"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black_3"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv2"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:fontFamily="@font/arimo_regular"
                        android:includeFontPadding="false"
                        android:text="@string/complete_guide_to_publish_your_app_on_google_play_store"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_1"
                        android:textSize="@dimen/_11ssp"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv2"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/enableNotificationBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_80sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_14sdp"
                android:foreground="?attr/selectableItemBackground"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv3"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_120sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_enable_noti_btn"
                        />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/iv3"
                        app:layout_constraintBottom_toBottomOf="@+id/iv3"
                        android:layout_margin="@dimen/_8sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        app:cardBackgroundColor="@color/white_95"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/features"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:fontFamily="@font/arimo_regular"
                            android:textSize="@dimen/_11ssp"
                            android:includeFontPadding="false"
                            />

                    </androidx.cardview.widget.CardView>



                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/arimo_regular"
                        android:includeFontPadding="false"
                        android:text="@string/how_to_enable_notifications"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black_3"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv3"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:fontFamily="@font/arimo_regular"
                        android:includeFontPadding="false"
                        android:text="@string/setup_push_notifications_for_your_android_app"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_1"
                        android:textSize="@dimen/_11ssp"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv3"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/customDomainBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_80sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_14sdp"
                android:foreground="?attr/selectableItemBackground"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv4"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_120sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_custom_comain_btn"
                        />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/iv4"
                        app:layout_constraintBottom_toBottomOf="@+id/iv4"
                        android:layout_margin="@dimen/_8sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        app:cardBackgroundColor="@color/white_95"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/advanced"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:fontFamily="@font/arimo_regular"
                            android:textSize="@dimen/_11ssp"
                            android:includeFontPadding="false"
                            />

                    </androidx.cardview.widget.CardView>



                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/arimo_regular"
                        android:includeFontPadding="false"
                        android:text="@string/how_to_add_custom_domain"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black_3"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv4"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:fontFamily="@font/arimo_regular"
                        android:includeFontPadding="false"
                        android:text="@string/connect_your_own_domain_to_your_app"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_1"
                        android:textSize="@dimen/_11ssp"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv4"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/admobBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_80sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_14sdp"
                android:foreground="?attr/selectableItemBackground"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv5"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_120sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_admob_btn"
                        />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/iv5"
                        app:layout_constraintBottom_toBottomOf="@+id/iv5"
                        android:layout_margin="@dimen/_8sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        app:cardBackgroundColor="@color/white_95"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/monetization"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:fontFamily="@font/arimo_regular"
                            android:textSize="@dimen/_11ssp"
                            android:includeFontPadding="false"
                            />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/arimo_regular"
                        android:includeFontPadding="false"
                        android:text="@string/how_to_use_admob"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black_3"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv5"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:fontFamily="@font/arimo_regular"
                        android:includeFontPadding="false"
                        android:text="@string/monetize_your_app_with_google_admob"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_1"
                        android:textSize="@dimen/_11ssp"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv5"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>